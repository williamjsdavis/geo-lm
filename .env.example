# geo-lm Configuration
# Copy this file to .env and fill in your values

# Database
GEO_LM_DATABASE_PATH=./data/geo_lm.db

# LLM Providers (set at least one)
GEO_LM_ANTHROPIC_API_KEY=
GEO_LM_OPENAI_API_KEY=
LLAMA_API_KEY=

# Default Models
GEO_LM_DEFAULT_MODEL=claude-sonnet-4-20250514
GEO_LM_DEFAULT_CONSOLIDATION_MODEL=claude-sonnet-4-20250514
GEO_LM_DEFAULT_DSL_MODEL=claude-sonnet-4-20250514

# API Server
GEO_LM_API_HOST=0.0.0.0
GEO_LM_API_PORT=8000
GEO_LM_DEBUG=true

# Workflow Settings
GEO_LM_MAX_DSL_RETRIES=5
GEO_LM_LLM_TEMPERATURE=0.7

# Storage
GEO_LM_UPLOADS_DIR=./uploads
GEO_LM_EXPORTS_DIR=./exports
GEO_LM_DATA_DIR=./data
